{{>header}}
<body>
  <div class="container">
    <div class="jumbotron">
      <h1 class="display-4" style="text-align:center">Registration Page</h1>
      <hr class="my-4">
      <div style="text-align:center">
        <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
        <p style="margin-top:7px;">Already have an account?</p>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <form action="/storeregister" style="width:60%;" method="post">
        <p style="color:red">{{ errormsg }}</p>
        <div class="form-group row">
          <label for="fullname" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input type="text" name="fullname" class="form-control" placeholder="John Doe" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="email" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="email" name="email" class="form-control" placeholder="email@example.com" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="password" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input type="password" name="password" class="form-control" placeholder="Password" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="birthdate" class="col-sm-2 col-form-label">Birth Date</label>
          <div class="col-sm-10">
            <input type="date" name="birthdate" class="form-control" placeholder="John Doe" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="phone" class="col-sm-2 col-form-label">Phone</label>
          <div class="col-sm-10">
            <input type="tel" id="phone" name="phone" class="form-control" placeholder="1234567890" minlength="10" required>
          </div>
        </div>

        <div style="text-align:center">
          <button type="submit" id="submit" class="btn btn-primary">Register</button>
        </div>
      </form>
    </div>
  </div>

  <script type="text/javascript">
    $("#phone").removeClass("is-valid");
    $("#phone").addClass("is-invalid");

    $('#phone').keyup(function(){
        $("#phone").removeClass("is-valid");
        $("#phone").addClass("is-invalid");
        if($('#phone').val().length == 10){
            $("#phone").removeClass("is-invalid");
            $("#phone").addClass("is-valid");
        } 
    });
</script>

</body>
</html>
