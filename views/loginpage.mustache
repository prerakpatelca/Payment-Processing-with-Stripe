{{>header}}
<body>
  <div class="container">
    <div class="jumbotron">
      <h1 class="display-4" style="text-align:center">Login Page</h1>
      <hr class="my-4">
      <div style="text-align:center">
        <a class="btn btn-dark btn-lg" href="/register" role="button">Register</a>
        <p style="margin-top:7px;">Don't have an account?</p>
      </div>
    </div>


    <div class="d-flex justify-content-center">
      <form action="/attemptlogin" style="width:40%;" method="post">
        <p style="color:red">{{ errormsg }}</p>
        <div class="form-group row">
          <label for="email" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="text" name="email" class="form-control" placeholder="email@example.com">
          </div>
        </div>

        <div class="form-group row">
          <label for="password" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
        </div>

        <div style="text-align:center">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>
    </div>

  </div>
</body>
</html>
