{{>header}}
<body>
    <div class="container">
        <div class="jumbotron">
        <h1 class="display-4" style="text-align:center">Admin Dashboard</h1>
        <hr class="my-4">
            <div style="text-align:center">
                <a class="btn btn-dark btn-lg" href="/logout" role="button">Logout</a>
                <p style="margin-top:7px;">Want to logout?</p>
            </div>
        </div>

        {{ #norows }}
            <div class="form-row d-flex justify-content-center">
                <div class="col-md-3 mb-3 d-flex justify-content-center">
                    <h5>No registered Members</h5>
                </div>
            </div>
        {{ /norows }}

        {{ #showrows }}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Password</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Subscription</th>
                    <th scope="col" colspan="2" style="text-align: center;">Action</th>
                </tr>
            </thead>
            <tbody>
                {{ #customers }}
                    <tr>
                        <td>{{ fullname }}</td>
                        <td>{{ email }}</td>
                        <td>{{ password }}</td>
                        <td>{{ birthdate }}</td>
                        <td>{{ phone }}</td>
                        <td>{{ subscription }}</td>
                        <td>
                            <form action="/sendUpdate" method="POST">
                                <input type="hidden" value="{{ customerID }}" name="customer" />
                                <input type="hidden" value="{{ subscripitionID }}" name="subscription" />
                                <input class="btn btn-primary" type="submit" value="Update" />
                            </form>
                        </td>
                        <td>
                            <form action="/customerDelete" method="POST">
                                <input type="hidden" value="{{ customerID }}" name="customer" />
                                <input type="hidden" value="{{ subscripitionID }}" name="subscription" />
                                <input class="btn btn-danger" type="submit" value="Delete" />
                            </form>
                        </td>
                    </tr>
                {{ /customers }}
            </tbody>
        </table>
        {{ /showrows }}
    </div>
</body>
</html>
