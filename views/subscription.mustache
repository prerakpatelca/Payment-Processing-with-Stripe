{{>header}}
<body>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4" style="text-align:center">Registration Page</h1>
            <hr class="my-4">
            <div style="text-align:center">
                <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
                <p style="margin-top:7px;">Already have an account?</p>
            </div>
        </div>

        {{ #products }}
            {{ #plans }}
                <div class="form-row d-flex justify-content-center">
                    <div class="col-md-3 mb-3">
                        <label for="phone">Subscription Type</label>
                        <h4>{{ name }} - {{ amount }} / {{ interval }}</h4>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="phone">Action</label>
                        <form action="/takePayment" method="POST">
                            <input type="hidden" value="{{ id }}" name="subscriptionId"/>
                            <input type="hidden" value="{{ amount }}" name="subscriptionAmount"/>
                            <input type="hidden" value="{{ name }}" name="subscriptionName" />
                            <input type="hidden" value="{{ interval }}" name="subscriptionInterval"/>
                            <input type="hidden" value="{{ interval_count }}" name="subscriptionIntervalCount"/>
                            <input class="btn btn-primary" type="submit" value="Sign Up"/>
                        </form>
                    </div>
                </div>
            {{ /plans }}
        {{ /products }}
    </div>
</body>
</html>
